{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Cortex Debug",
           "cwd": "${workspaceRoot}",
            "executable": "./build/${workspaceRootFolderName}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32F407VET6",
            "runToEntryPoint": "main",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/stm32f4x.cfg"
            ],
             "svdFile": "./STM32F407.svd",
             "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
             }
        }
        
    ],
    
}